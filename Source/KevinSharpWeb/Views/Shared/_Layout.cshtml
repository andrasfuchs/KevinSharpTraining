<!DOCTYPE html>
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Kevin Sharp Training</title>

    <meta http-equiv="content-language" content="en">

    <meta name="description" content="Kevin Sharp Training: in-depth .NET, C#, HTML5, jQuery and Bootstrap courses and personalized one-on-one tranings from a Microsoft Ceritfied Professional">
    <meta name="keywords" content="Kevin Sharp, training, IT training, programming, .NET, C#, C Sharp, Desktop, Web, HTML5, jQuery, Bootstrap, software development, software developer">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:100,200,300,700,800,900' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/css")
    @{
        var cssMediaBundleUrl = BundleTable.Bundles.ResolveBundleUrl("~/Content/screen", true);
    }
    <link href="@cssMediaBundleUrl" rel="stylesheet" type="text/css" media="screen" />

    <!-- Google Hangouts -->
    <script src="https://apis.google.com/js/platform.js" async defer></script>

    <!-- Skin -->
    <link rel="stylesheet" href="~/Content/colors/KevinSharp.css" class="colors">

    <!-- Favicons -->
    <link rel="shortcut icon" href="http://www.kevinsharp.net/favicon.ico" sizes="16x16 24x24 32x32 64x64 110x110 114x114 256x256 512x512" type="image/vnd.microsoft.icon" />
    <link rel="icon" href="http://www.kevinsharp.net/favicon.ico" sizes="16x16 24x24 32x32 64x64 110x110 114x114 256x256 512x512" type="image/vnd.microsoft.icon" />

    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <script src="Scripts/respond.min.js"></script>
    <![endif]-->
    <!--[if IE]>
    <link rel="stylesheet" href="Content/ie.css">
    <![endif]-->
    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Universal Analytics -->
    <script>
        if ((document.location.hostname.search("kevinsharp.net") !== -1) && (document.location.hostname.search("beta.kevinsharp.net") == -1)) {
            //google analytics code goes here

            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
        }
        else {
            console.log("Running non-production google analytics replacement now");
            ga = function (arg) { console.log("ga:", arguments); };
        }

        ga('create', 'UA-61324346-1', 'auto');
        ga('require', 'linkid', 'linkid.js');
        ga('send', 'pageview');

    </script>
</head>
<body class="boxed home">
    <div class="page-mask">
        <div class="page-loader">
            <div class="spinner"></div>
            Loading...
        </div>
    </div>
    <!-- Wrap -->
    <div class="wrap">
        @Html.Partial("_Menu")

        @*@Html.Partial("_LoginPartial")*@

        <!-- Main Section -->
        <section id="main">
            @RenderBody()
        </section>
        <!-- /Main Section -->
        @Html.Partial("_Footer")

        @*
            <!-- Persmission test to App_Data -->
            note to myself: if there is an E_ACCESSDENIED error when we try to access the SQL CE database, we need to add Read&Execute rights to the IWAM_plesk(default) user on the "bin" folder
            go to http://cp.kevinsharp.net/ / File Manager / ...
            http://www.asp.net/mvc/overview/older-versions/deployment-to-a-hosting-provider/deployment-to-a-hosting-provider-creating-and-installing-deployment-packages-12-of-12
            <footer>
                <br />
                Current user: @System.Security.Principal.WindowsIdentity.GetCurrent().Name<br />
                <br />
                Permissions to ~/App_Data<br />
                @foreach (System.Security.AccessControl.FileSystemAccessRule ar in System.IO.Directory.GetAccessControl(Server.MapPath("~/App_Data/")).GetAccessRules(true, true, typeof(System.Security.Principal.SecurityIdentifier)))
                {
                    @(ar.IdentityReference.ToString() + " " + (ar.IsInherited ? "[inherited] " : "") + ar.AccessControlType.ToString() + ": " + ar.FileSystemRights.ToString())<br />
                }
                <br />
                Permissions to ~/bin<br />
                @foreach (System.Security.AccessControl.FileSystemAccessRule ar in System.IO.Directory.GetAccessControl(Server.MapPath("~/bin/")).GetAccessRules(true, true, typeof(System.Security.Principal.SecurityIdentifier)))
                {
                    @(ar.IdentityReference.ToString() + " " + (ar.IsInherited ? "[inherited] " : "") + ar.AccessControlType.ToString() + ": " + ar.FileSystemRights.ToString())<br />
                }
            </footer>
        *@

        <!-- Scroll To Top -->
        <a href="#" class="scrollup"><i class="fa fa-angle-up"></i></a>
    </div>
    <!-- /Wrap -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scripts")
    <script type="text/javascript" src="@Url.Content("/Scripts/Views/Home/Global.js")"></script>

    <script type='text/javascript' src='http://s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
    <script type='text/javascript'>(function ($) { window.fnames = new Array(); window.ftypes = new Array(); fnames[0] = 'EMAIL'; ftypes[0] = 'email'; fnames[1] = 'FNAME'; ftypes[1] = 'text'; fnames[2] = 'LNAME'; ftypes[2] = 'text'; }(jQuery)); var $mcj = jQuery.noConflict(true);</script>

    @RenderSection("scripts", required: false)
</body>
</html>
